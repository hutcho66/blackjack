{
  "compilerOptions": {
    "rootDir": "src",
    "sourceRoot": "src",
    "sourceMap": true,
    "outDir": "build",
    "noImplicitAny": true,
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["test"]
} 
